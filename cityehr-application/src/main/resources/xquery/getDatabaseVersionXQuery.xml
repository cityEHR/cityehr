<exist:query xmlns:exist="http://exist.sourceforge.net/NS/exist" start="1" max="1" xml:space="preserve">
        <exist:text>
        xquery version "1.0"; 
       
        let $version := system:get-version()
        return
        &lt;version>{$version}&lt;/version>
        
        </exist:text>
</exist:query>

